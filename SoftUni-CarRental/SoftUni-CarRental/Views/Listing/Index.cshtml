@using SoftUni_CarRental.ViewModels.Listing;
@model ListingPageViewModel
<div class="hero inner-page" style="background-image: url('images/hero_1_a.jpg');">

    <div class="container">
        <div class="row align-items-end ">
            <div class="col-lg-5">

                <div class="intro">
                    <h1><strong>Listings</strong></h1>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <h2 class="section-heading"><strong>Car Listings</strong></h2>
            </div>
        </div>

        <div class="row">
            @foreach (var card in Model.AllCarCardsForListing)
            {
                <div class="col-md-6 col-lg-4 mb-4">

                    <div class="listing d-block  align-items-stretch">
                        <div class="listing-img h-100 mr-4">
                            <img src="@card.Car.ImageUrl" alt="Image" class="img-fluid">
                        </div>
                        <div class="listing-contents h-100">
                            <h3>@card.Car.Model</h3>
                            <div class="rent-price">
                                <strong>$@card.Car.PricePerDay</strong><span class="mx-1">/</span>day
                            </div>
                            <div class="d-block d-md-flex mb-3 border-bottom pb-3">
                                <div class="listing-feature pr-4">
                                    <span class="caption">Colour:</span>
                                    <span class="text">@card.Car.Colour</span>
                                </div>
                                <div class="listing-feature pr-4">
                                    <span class="caption">Doors:</span>
                                    <span class="number">@card.Car.DoorsCount</span>
                                </div>
                                <div class="listing-feature pr-4">
                                    <span class="caption">Passenger:</span>
                                    <span class="number">@card.Car.PassengersCount</span>
                                </div>
                            </div>
                            <div>
                                <p>@card.Car.Description</p>
                                <a asp-controller="Rent" asp-action="Index" asp-route-id="@card.CarId" class="btn btn-primary">@card.ButtonLabel</a>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-5">
                <div class="custom-pagination">
                    <a href="#">1</a>
                    <span>2</span>
                    <a href="#">3</a>
                    <a href="#">4</a>
                    <a href="#">5</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-primary py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7 mb-4 mb-md-0">
                <h2 class="mb-0 text-white">What are you waiting for?</h2>
            </div>
            <div class="col-lg-5 text-md-right">
                <a href="#" class="btn btn-primary btn-white">Rent Now</a>
            </div>
        </div>
    </div>
</div>
