@model EditCarViewModel
@{
    ViewBag.Title = "Edit Post";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="row">
    <form method="post">
        <div class="form-group">
            <div class="mb-3">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" placeholder="Write model here...">
                <span asp-validation-for="Model" class="small textdanger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PassengersCount"></label>
                <input asp-for="PassengersCount" class="form-control" placeholder="Write passenger count here...">
                <span asp-validation-for="@Model.PassengersCount" class="small textdanger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DoorsCount"></label>
                <input asp-for="DoorsCount" class="form-control" placeholder="Write door count here...">
                <span asp-validation-for="@Model.DoorsCount" class="small textdanger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Colour"></label>
                <input asp-for="Colour" class="form-control" placeholder="Write colour here...">
                <span asp-validation-for="@Model.Colour" class="small textdanger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PricePerDay"></label>
                <input asp-for="PricePerDay" class="form-control" placeholder="Write price per day here...">
                <span asp-validation-for="@Model.PricePerDay" class="small textdanger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" placeholder="Write description here...">
                <span asp-validation-for="@Model.Description" class="small textdanger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Add Image Url here...">
                <span asp-validation-for="@Model.ImageUrl" class="small textdanger"></span>
            </div>
        </div>
        <input class="btn btn-primary mt-3" type="submit" value="Edit" />
    </form>
</div>
