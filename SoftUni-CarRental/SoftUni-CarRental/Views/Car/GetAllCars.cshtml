@model IEnumerable<AllCarsViewModel>
@{
    ViewBag.Title = "All Cars";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var car in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <img class="card-img-top" style="width: 18rem;"
             src="@car.ImageUrl" alt="Car Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@car.Model</h5>
                <p class="mb-0">Colour: @car.Colour</p>
                <p class="mb-0">Door count: @car.DoorsCount</p>
                <p class="mb-0">Passenger count: @car.PassengersCount</p>
                <p class="mb-0">Price Per Day: @car.PricePerDay</p>
                <p class="mb-0">Description: @car.Description</p>
            </div>
            <tr class="actions">
                <th><span class="fw-bold">Actions:</span></th>
                <td>
                    <a asp-controller="Car" asp-action="Edit" asp-route-id="@car.Id" class="btn btn-primary">Edit</a>
                    <a asp-controller="Car" asp-action="Details" asp-route-id="@car.Id" class="btn btn-primary">Details</a>
                    <a asp-controller="Car" asp-action="Delete" asp-route-id="@car.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            @*<form class="input-group-sm" asp-controller="Book" asp-action="AddToCollection" asp-route-id="@car.Id">
                <input type="submit" value="Add to Collection" class="fs-6 btn btn-success mb-3 p-2" />
            </form>*@
        </div>
    }
</div>
