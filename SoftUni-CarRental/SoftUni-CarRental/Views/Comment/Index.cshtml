@using SoftUni_CarRental.ViewModels.Comment;
@model CreateCommentViewModel
<div class="hero inner-page" style="background-image: url('images/hero_1_a.jpg');">
    <div class="container my-5 py-5 text-dark">
        <div class="row d-flex justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-6">
                <div class="card">
                    <div class="card-body p-4">
                        <div class="d-flex flex-start w-100">
                            <img class="rounded-circle shadow-1-strong me-3"
                                 src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(21).webp" alt="avatar" width="65"
                                 height="65" />
                            <div class="w-100">
                                <h5>Add a comment</h5>
                                <form asp-controller="Comment" asp-action="Create" method="post">
                                    <div class="form-outline">
                                        <div class="form-group">
                                            <label asp-for="Description" class="form-label">Description</label>
                                            <input asp-for="Description" class="form-control" aria-required="true" />
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="UserEmail" class="form-label">UserEmail</label>
                                            <input asp-for="UserEmail" class="form-control" aria-required="true" />
                                            <span asp-validation-for="UserEmail" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Create" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
